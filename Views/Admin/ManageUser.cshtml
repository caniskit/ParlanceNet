@using Microsoft.AspNetCore.Mvc
@model ParlanceNet.Models.ViewModels.GlobalViewModel
@{
    ViewData["Title"] = "Admin";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}

   
            <div class="row">
                <div class=" col-lg">


                    <table class="table" style="font-size: 80%;">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.user.Username)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.user.Email)
                            </th>
                           <th>
                                @Html.DisplayNameFor(model => model.user.BirthDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.user.CreatedOn)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.user.EditedOn)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.user.IsDeleted)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.user.RoleId)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model.friends)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Username)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BirthDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedOn)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EditedOn)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsDeleted)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RoleId)
                                </td>
                                <td style="min-width: 200px;">
                                    @*@Html.ActionLink("Edit", "Edit", new { userid = item.ID }) |
                                    @Html.ActionLink("Details", "Details", new { userid = item.ID })*@ 
                                    @if (item.RoleId == 1)
                                    {<span>|</span>
                                        if (item.IsDeleted == false)
                                        { @Html.ActionLink("Ban", "BanUser", new { userid = item.ID })}
                                    else
                                        {
                                          @Html.ActionLink("Activate", "ActiveUser", new { userid = item.ID })


                                    }
                                    }

                                </td>
                            </tr>
                        }

                    </table>


                </div>
            </div>
